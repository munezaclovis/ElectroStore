@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul id="menu-main-menu" class="menu">
	@if (SignInManager.IsSignedIn(User))
	{
		<li>
			<a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><span>Hello @User.Identity.Name!</span></a>
		</li>
		<li>
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li>
			<a asp-area="Identity" asp-page="/Account/Login"><span>Login</span></a>
		</li>
		<li>
			<a asp-area="Identity" asp-page="/Account/Register"><span>Register</span></a>
		</li>
	}
</ul>